<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuhui.shiro.module.sys.mapper.UserMapper">
    <select id="findUserByName" resultType="com.liuhui.shiro.module.sys.entity.User">
        select * from user where username=#{username}
    </select>
</mapper>